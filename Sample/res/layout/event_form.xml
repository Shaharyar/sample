<?xml version="1.0" encoding="utf-8"?>
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/ScrollView"
      android:layout_width="match_parent"
      android:layout_height="fill_parent"
      android:scrollbarStyle="outsideOverlay" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dip">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
      			android:textSize="14.0sp" 
      			android:textColor="@color/grey" 
      			android:gravity="center_vertical" 
       			android:id="@+id/calendar_label" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="fill_parent" 
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/calendar"/>
            
            <Spinner
                android:id="@+id/calendar"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/event_name" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/event"/>
    		<EditText 
        		android:id="@+id/event_title" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="fill_parent" 
        		android:layout_height="48.0dip" 
        		android:singleLine="true"
        		
        		android:layout_weight="5"
        		android:hint="@string/hint_what" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
             <TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/where" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="fill_parent" 
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/where"/>
    		<EditText 
        		android:id="@+id/location" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="fill_parent" 
        		android:layout_height="48.0dip"
        		android:maxWidth="500dp"
        		android:singleLine="true" 
        		android:layout_weight="5"
        		android:hint="@string/location" /> 
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			<TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/from" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/from"/>
            <Button
                android:id="@+id/from_date"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
			 <Button
                android:id="@+id/from_time"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </TableRow>
    
    	<TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			<TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/to" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/to"/>
            <Button
                android:id="@+id/to_date"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
			 <Button
                android:id="@+id/to_time"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </TableRow>
		<TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			 <TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/space1" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" />
            <TextView
                android:id="@+id/guests_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:gravity="center_vertical"
                android:paddingBottom="4.0dip"
                android:paddingTop="4.0dip"
                android:singleLine="false"
                android:textColor="@color/grey"
                android:textSize="14.0sp" />

    	</TableRow>
        
		
		
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/guests_label" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/guests"/>
    		<AutoCompleteTextView  
        		android:id="@+id/guests" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="fill_parent" 
        		android:layout_height="48.0dip" 
        		android:singleLine="true"
        		android:layout_weight="5"
        		android:hint="@string/guests" />
    		<Button
    		    android:id="@+id/add_guests"
    		    style="?android:attr/buttonStyleSmall"
    		    android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
    		    android:text="@string/add_guests" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/description_label" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/description"/>
    		<EditText 
        		android:id="@+id/description" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="fill_parent" 
        		android:layout_height="48.0dip" 
        		android:singleLine="true"
        		android:layout_weight="5"
        		android:hint="@string/description" />

    		

        </TableRow>
        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			<TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/repetition_label" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/repetition"/>
            <Spinner
                android:id="@+id/repetition"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
			 
        </TableRow>
        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			<TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/reminder" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/reminder"/>
            <Spinner
                android:id="@+id/reminder_time"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
			 <Spinner
                android:id="@+id/reminder_type"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/space" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" />
    		<Button
    		    android:id="@+id/add_reminder"
    		    style="?android:attr/buttonStyleSmall"
    		    android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
    		    android:text="@string/add_reminder" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			<TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/show_mw_as_label" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/show_me_as"/>
            <Spinner
                android:id="@+id/show_me_as"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
			 
        </TableRow>
         <TableRow
            android:id="@+id/tableRow13"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			<TextView 
        		android:textSize="14.0sp" 
        		android:textColor="@color/grey" 
        		android:gravity="center_vertical" 
        		android:id="@+id/files_label" 
        		android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" 
        		android:layout_marginLeft="4.0dip" 
        		android:layout_marginRight="4.0dip" 
        		android:singleLine="true" 
        		android:text="@string/files"/>
            <Spinner
                android:id="@+id/choose_your_file"
                android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
			    <Button
    		    android:id="@+id/upload_file"
    		    style="?android:attr/buttonStyleSmall"
    		    android:paddingTop="4.0dip" 
        		android:paddingBottom="4.0dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
    		    android:text="@string/upload" 
    		    android:layout_weight="1" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow14"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			<TextView
                android:id="@+id/privacy_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:gravity="center_vertical"
                android:paddingBottom="4.0dip"
                android:paddingTop="4.0dip"
                android:singleLine="true"
                android:text="@string/privacy"
                android:textColor="@color/grey"
                android:textSize="14.0sp" />

            <Spinner
                android:id="@+id/privacy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="4.0dip"
                android:paddingTop="4.0dip" />

            
        </TableRow>
			<EditText
                android:id="@+id/from_day"
                android:inputType="text"
                android:visibility="gone" />
            <EditText
                android:id="@+id/from_month"
                android:inputType="text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/from_year"
                android:inputType="text"
                android:visibility="gone" />
            
			<EditText
                android:id="@+id/to_day"
                android:inputType="text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/to_month"
                android:inputType="text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/to_year"
                android:inputType="text"
                android:visibility="gone" />
            
            <EditText
                android:id="@+id/from_hour"
                android:inputType="text"
                android:visibility="gone" />
            
			<EditText
                android:id="@+id/from_minute"
                android:inputType="text"
                android:visibility="gone" />
			<EditText
                android:id="@+id/from_am_pm"
                android:inputType="text"
                android:visibility="gone" />
            <EditText
                android:id="@+id/to_hour"
                android:inputType="text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/to_minute"
                android:inputType="text"
                android:visibility="gone" />
